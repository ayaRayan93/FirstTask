<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    android:orientation="vertical"
    tools:context="com.example.ayaali.firsttask.MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="5dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#000">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView

                android:id="@+id/drawer_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_32"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:padding="3dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/headerLogo"
                android:layout_toRightOf="@+id/drawer_indicator"
                android:text="@string/app_name"
                android:id="@+id/txtHeader"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textAllCaps="true"
                android:gravity="left"/>
        </LinearLayout>
        <View
            android:id="@+id/View01"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center">
            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mlogo"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="5"
          android:layout_gravity="center"

          >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="50dp"
            >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/a"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"

                app:civ_shadow_radius="10" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:clickable="true"
                app:fabSize="mini"
               app:backgroundTint="@color/orange"
                app:srcCompat="@drawable/camera"
                android:layout_alignBottom="@id/circularImageView"
                android:layout_alignRight="@id/circularImageView"
                android:layout_marginBottom="25dp"
                />


        </RelativeLayout>
        <TextView
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="ايه علي محمد"
              android:textSize="24sp"
              android:textColor="@color/colorPrimary"
              />
          <TextView
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="عثمان ابن عفان"
              android:textSize="18sp"
              />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="5"
          android:weightSum="2"
          android:padding="10dp"
          android:background="@color/white"

          >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/calendar"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birth Date"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 Dec 2016 12:00 pm PST"
                        android:textSize="18sp"
                        android:textColor="#979797"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="horizontal"
              >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/calendar"

                />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="10dp"
                  >
                  <TextView
                      android:layout_gravity="left"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Age Today"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:textSize="24sp"
                      />
                  <TextView
                      android:layout_gravity="left"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="5 Year 2 Month 0 Day"
                      android:textSize="18sp"
                      android:textColor="#979797"
                      />
              </LinearLayout>


      </LinearLayout>

      </LinearLayout>
</LinearLayout>
